alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'
alias ......='cd ../../../../../'

alias ll='ls -hal'
alias la='stat -c "%a %U %n" *'

alias shell='echo $0'

# Dotfile/Config Tracking
alias config='/usr/bin/git --git-dir=$HOME/dotfiles/ --work-tree=$HOME'

# Git Alias
alias gstat='git status'
alias gpush='git push'

gadd() {
  if [ $# -eq 0 ]
  then
    git add .
  else
    git add "$*"
  fi
}

gcommit() {
  if [ $# -eq 0 ]
  then
    echo "Please enter a note after gcommit"
  else
    git commit -m "$*"
  fi
}


